#!/bin/bash
#SBATCH --job-name=sup
#SBATCH --partition=bio
#SBATCH --time=480:00:00
##SBATCH --nodes=2
#SBATCH --ntasks=32
#SBATCH --mem=12000
##SBATCH --gres=gpu:1
#SBATCH --output=outputs.%N.%j.out
